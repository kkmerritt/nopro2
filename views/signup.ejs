<%- include("./partials/header") %>
<br>
<br>
<form class="ui form" action="/register" method="post" >
  <div class="inline field">
    <label>Player Email</label>
    <input type="text" name="username" placeholder="Email">
  </div>
  <div class="inline field">
    <label>Player Password</label>
    <input type="text" name="password" placeholder="password">
  </div>
  <div class="inline field">
    <label>Player First Name</label>
    <input type="text" name="firstname" placeholder="First Name">
  </div>

  <div class="inline field">
    <label>Player Last Name</label>
    <input type="text" name="lastname" placeholder="Last Name">
  </div>
  <div class="">
      <label>Gender</label>
      <select class="" name='gender'>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>

  <div class="inline field">
    <label>Player Image</label>
    <input type="text" name="image" placeholder="Enter img url">
  </div>
  <div class="inline field">
    <label>Is this an Captain Profile?</label>
    <input type="text" name="captaincode" placeholder="False">
  </div>
  <div class="inline field">
    <label>Is this an Admin Profile?</label>
    <input type="text" name="admincode" placeholder="False">
  </div>


  <div class="">
      <label>Teams</label>
      <select class="ui search dropdown" name='team'>
        <option value="">Free Agent</option>

        <% teams.forEach(function(team){ %>

          <option name="<%=team.name%>"><%= team.name %></option>

        <% }) %>


      </select>
    </div>

  <button class="ui button" type="submit">Submit</button>


</form>



<%- include("./partials/footer") %>
