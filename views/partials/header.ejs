<body>

<div id="navbar">
  <div id="logo"><img src="/img/nopro_logo.gif" alt=""></div>
<div id="userIn">


  <% if(currentUser){ %>
<br>
   <img src="<%=currentUser.image%>" height="50" width="50">
   <br>
  <a href="/players/<%=currentUser.id%>">
    <%=currentUser.firstname %> <%= currentUser.lastname %>

  </a><br>

  <% } else { %>
    No Current User Logged in.
  <%}%>
</div>

</div>



<div id="sidebar">

<a title="Home" href="/"><i class="fas fa-home"></i>  HOME</a>
<a title="Login Here" id="logBtn"><i class="fas fa-user"></i>  LOGIN</a>
<a title="Logout Here" href="/logout" id="logBtn"><i class="fas fa-user"></i> LOGOUT </a>

<a title="Signup Here" href='/init'><i class="fas fa-sign-in-alt"></i>  SIGNUP</a>
<hr>
<a title="Mailto:"href="mailto:info@noprosports.org"><i class="fas fa-envelope"></i>  EMAIL</a>
