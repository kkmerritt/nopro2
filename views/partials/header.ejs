<a title="Twitter" href="https://twitter.com/noprosports/"><i class="fab fa-twitter-square"></i> TWITTER</a>
</div><hr>


</div><!-- end of sidebar -->

<!-- start of modal -->
<div id="myModal" class="modal">
<form action="/login" method="post">
<div class="modal-content">
<span class="close"><i class="fas fa-window-close"></i></span>
<p>Please login:</p>
<label for="email">email</label>
<input type="text" name="username">
<label for="email">password</label>
<input type="text" name="password">
<button type="submit" class="fas fa-arrow-circle-right" id="myBtn"></button>
</div>
</form>
</div>
<!-- end of modal -->


<!-- flash error container -->
<div class="flash-container">
<% if(error && error.length>0){ %>
<div class="alert alert-danger" role="alert"><%= error %></div>
<% } %>

<% if(success && success.length>0){ %>
<div class="alert alert-success" role="alert"><%= success %></div>
<% } %>
</div>
<!-- end flash error container -->

<div class="container"><!-- main content container -->
