    <option value="28">28</option>
    <option value="29">29</option>
    <option value="30">30</option>
    <option value="31">31</option>
  </select><br>

  <label>NEW TIME of GAME:</label>
  <select name="date[time]">
    <option value="<%=game.date.time%>"><%=game.date.time%></option>

    <option value="6:15pm">6:15pm</option>
    <option value="6:30pm">6:30pm</option>
    <option value="7:30pm">7:30pm</option>
    <option value="9:00pm">9:00pm</option>
  </select><br><br>

  <label>PREVIOUS FIELD: <%=game.field%></label><br>
  <label>NEW FIELD:</label>
  <select name="field">
    <option value="<%=game.field%>"><%=game.field%></option>

    <option value="Field One">Field One</option>
    <option value="Field One">Field Two</option>
    <option value="Field One">Field Three</option>
  </select><br><br>

  <label>PREVIOUS HOME TEAM:</label>
  <label><%=game.home%></label><br>
  <label>NEW HOME TEAM:</label>
  <select name="home" value="Home Team">
    <option value="<%=game.home%>"><%=game.home%></option>
<hr>
    <% teams.forEach(function(team){ %>
      <option value="<%=team.name%>"><%=team.name%></option>
      <% }); %>
    </select><br><br>


    <label>PREVIOUS AWAY TEAM:</label>
    <label><%=game.away%></label><br>
    <label>NEW AWAY TEAM:</label>
    <select name="away" value="Home Team">
      <option value="<%=game.away%>"><%=game.away%></option>

      <% teams.forEach(function(team){ %>
        <option value="<%=team.name%>"><%=team.name%></option>
        <% }); %>
      </select>

<br>
<br>
<br>
<p>score input IF game is after<br> <%=Date()%></p>


<label for="quantity">Home Score (between 0 and 50):</label>
<input type="number"  name="homescore" value="<%=game.homescore%>" min="1" max="50"><br>
<label for="quantity">Away Score (between 0 and 50):</label>

<input type="number"  name="awayscore" value="<%=game.awayscore%>" min="1" max="50">




<br>
      <button type="submit">Save This EDITED Game</button>

    </form>

    <!-- delete this game form -->
    <form action="/games/<%=game.id%>?_method=DELETE" method="post">
      <button type="submit">DELETE THIS GAME</button>
    </form>

