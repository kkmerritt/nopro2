<%- include("../partials/header") %>

<form class="ui form" action="/players/<%=player.id%>?_method=PUT" method="post" >

  <div class="inline field">
    <label>Player First Name</label>
    <input type="text" name="firstname" value="<%=player.firstname%>">
  </div>
  <div class="inline field">
    <label>Player Last Name</label>
    <input type="text" name="lastname" value="<%=player.lastname%>">
  </div>

  <div class="inline field">
      <label>Teams</label>
      <select class="ui search dropdown" name='team'>
        <option value="">Free Agent</option>

        <% teams.forEach(function(team){ %>

          <option name="<%=team.name%>"><%= team.name %></option>

        <% }) %>


      </select>
    </div>

  <button class="ui button" type="submit">Submit</button>


</form>



<%- include("../partials/footer") %>
